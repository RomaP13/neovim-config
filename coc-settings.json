    "text": "󰉿 text",
    "method": "󰆧 method",
    "function": "󰊕 function",
    "constructor": " constructor",
    "field": "󰜢 field",
    "variable": "󰀫 variable",
    "class": "󰠱 class",
    "interface": " interface",
    "module": " module",
    "property": "󰜢 property",
    "unit": "󰑭 unit",
    "value": "󰎠 value",
    "enum": " enum",
    "keyword": "󰌋 keyword",
    "snippet": " snippet",
    "color": "󰏘 color",
    "file": "󰈙 file",
    "reference": "󰈇 reference",
    "folder": "󰉋 folder",
    "enumMember": " enumMember",
    "constant": "󰏿 constant",
    "struct": "󰙅 struct",
    "event": " event",
    "operator": "󰆕 operator",
    "default": " default",
    "typeParameter": " typeParameter"
