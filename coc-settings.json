  "suggest.floatConfig": {
    "border": true,
    "rounded": false,
    "winblend": 0,
    "shadow": false
  },

  "diagnostic.floatConfig": {
    "border": true,
    "rounded": false,
    "winblend": 0,
    "shadow": false
  },

  "hover.floatConfig": {
    "border": true,
    "rounded": false,
    "winblend": 0,
    "shadow": false
  },

  "signature.floatConfig": {
    "border": true,
    "rounded": false,
    "winblend": 0,
    "shadow": false
  },

  // python
  "python.pythonPath": "/usr/bin/python",
  "python.venvPath": "/home/roman/.local/share/virtualenvs",
  "pyright.enable": true,

  // isort
  "python.sortImports.path": "~/.local/bin/isort",
  "pyright.organizeimports.provider": "isort",
  

  // black
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "~/.local/bin/black",
  "python.formatting.blackArgs": [
    "--line-length",
    "80"
  ],

  // flake8
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "~/.local/bin/flake8",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,

  // json
  "json.enable": true,
  "json.format.enable": false,

  // css
  "css.format.spaceAroundSelectorSeparator": true,

  // snippets
  "snippets.ultisnips.pythonPrompt": false,

  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "javascript.format.semicolons": "insert",

  "java.jdt.ls.java.home": "/usr/lib/jvm/java-17-openjdk-amd64",
  "java.jdt.ls.vmargs": "-Xmx2G -Xms100m",

  "Lua.format.enable": true,
}
